<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="border_pane" stylesheets="@app.css" type="BorderPane" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ToolBar>
              <items>
                  <Button fx:id="saveButton" mnemonicParsing="false" text="Save" />
                  <Button fx:id="generateButton" mnemonicParsing="false" text="Generate" />
                  <Button fx:id="exportButton" mnemonicParsing="false" text="Export" />
                  <Button fx:id="clearButton" mnemonicParsing="false" text="Clear" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <right>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TitledPane fx:id="configBox" animated="false" text="Node Configuration">
              <content>
                <AnchorPane>
                     <children>
                        <VBox fx:id="configPane" prefHeight="200.0" prefWidth="100.0" />
                     </children></AnchorPane>
              </content>
            </TitledPane>
            <TitledPane fx:id="applicationsList" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
               <graphic>
                  <Button fx:id="createAppButton" alignment="BASELINE_RIGHT" focusTraversable="false" mnemonicParsing="false" text="Create Application">
                     <effect>
                        <Glow />
                     </effect>
                     <padding>
                        <Insets bottom="8.0" left="10.0" right="8.0" top="8.0" />
                     </padding>
                  </Button>
               </graphic>
               <content>
                  <ScrollPane prefHeight="200.0" prefWidth="200.0">
                     <content>
                        <VBox fx:id="vBoxForAreaNames" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" />
                     </content></ScrollPane>
               </content>
            </TitledPane>
         </children>
      </VBox>
   </right>
   <bottom>
      <TextArea fx:id="textArea" prefHeight="99.0" prefWidth="640.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
         </padding>
      </TextArea>
   </bottom>
   <center>
      <SplitPane fx:id="base_pane" dividerPositions="0.2" prefHeight="0.0" prefWidth="0.0" BorderPane.alignment="CENTER">
        <items>
            <ScrollPane fitToHeight="true" prefViewportHeight="384.0" prefViewportWidth="169.0" vbarPolicy="NEVER">
               <content>
                  <VBox fx:id="left_pane" spacing="10.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
          <AnchorPane fx:id="right_pane" prefHeight="317.0" prefWidth="423.0" />
        </items>
      </SplitPane>
   </center>
</fx:root>
